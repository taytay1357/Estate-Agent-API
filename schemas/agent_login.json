{
      "$schema": "http://json-schema.org/draft-04/schema#",
      "id": "/users",
      "title": "User",
      "description": "Login route so only requires username and password",
      "type": "object",
      "properties": {
         "name": {
            "description": "the username of the user",
            "type": "string"
         },
         "password": {
            "description": "the password of the user",
            "type": "string"
         }
      },
      "required": ["name", "password"]
   }