{
   "$schema": "http://json-schema.org/draft-04/schema#",
   "definitions": {
      "userCreated": {
         "$id": "#userCreated",
         "title": "User Created",
         "description": "Confirmation of a successful user update/creation",
         "type": "object",
         "properties": {
            "ID": {
               "description": "ID of the new/updated user record",
               "type": "integer"
            },
            "success": {
               "description": "Boolean indicator of success",
               "type": "boolean"
            },
            "link": {
               "description": "Path to retrieve user record",
               "type": "string",
               "format": "uri"
            }
         }
      },
      "user": {
         "id": "/users",
         "title": "User",
         "description": "A user in the API",
         "type": "object",
         "properties": {
            "firstName": {
               "description": "the first name of the user",
               "type": "string"
            },
            "username": {
               "description": "the username of the user",
               "type": "string"
            },
            "password": {
               "description": "the password of the user",
               "type": "string"
            },
            "location": {
               "description": "the location of the agent",
               "type": "string"
            },
            "avatarURL": {
               "description": "the URL for the users avatar image",
               "type": "string"
            },
            "lastName": {
               "description": "the last name of the user",
               "type": "string"
            },
            "email": {
               "description": "the email for the agent",
               "type": "string"
            }
         },
         "required": ["firstName", "username", "password", "lastName", "email"],
         "additionalProperties": false
      }
   },
}